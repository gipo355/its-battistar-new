{
  "name": "its-battistar-be",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/its-battistar-be/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build-devenvironment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./scripts/setup-environment.ts",
        "cwd": "apps/its-battistar-be"
      }
    },
    "pre-lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --p ./tsconfig.app.json && prettier -c ./src",
        "cwd": "apps/its-battistar-be"
      }
    },
    "lint": {
      "dependsOn": ["pre-lint"],
      "executor": "@nx/eslint:lint"
    },
    "serve": {
      "dependsOn": ["build-devenvironment"],
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "its-battistar-be:build",
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "its-battistar-be:build:development"
        },
        "production": {
          "buildTarget": "its-battistar-be:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/its-battistar-be/jest.config.ts"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/its-battistar-be/Dockerfile . -t its-battistar-be"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventionalcommits"
      }
    }
  }
}
