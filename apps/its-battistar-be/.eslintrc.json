{
  "extends": [
    "../../.eslintrc.json",
    "plugin:n/recommended",
    "plugin:security/recommended-legacy"
  ],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "project": ["tsconfig.*?.json"]
  },
  "env": {
    "node": true,
    "es2024": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "rules": {
    "n/no-missing-import": "off",
    "n/no-extraneous-import": "off",
    "n/no-extraneous-require": "off"
  }
}
